    <script type="text/javascript" charset="utf-8">

        // specify the columns


        var columnDefs = [
            { headerName: "All", checkboxSelection: true, field: "all", width: 60 },
            { headerName: "Sr. No.", field: "sl", width: 100 },
            { headerName: "Item", field: "item", width: 100, editable: true },
            { headerName: "Serial No.", field: "serial", width: 100, editable: true },
            { headerName: "Model", field: "model", width: 100, editable: true },
            { headerName: "Brand", field: "brand", width: 100, editable: true },
            { headerName: "Employee ID", field: "empId", width: 180, editable: true },
            { headerName: "Employee Name", field: "empName", width: 180, editable: true },
            { headerName: "Employee Department", field: "empDept", width: 180, editable: true },
            { headerName: "Employee Designation", field: "empDesignation", width: 180, editable: true },
            { headerName: "Return", checkboxSelection: true, width: 100, editable: true },
            { headerName: "Return Date", field: "returnDate", width: 180, editable: true },
        ];

        // specify the data
        var rowData = [
            { all: "", checkboxSelection: true, sl: "1", item: "Laptop", serial: "Serial 001", model: "1234", brand: "Dell", empId: "Emp 001", empName: "Abhishek", empDept: "Technical", empDesignation: "UI Developer", checkboxSelection: true, returnDate: "dd/mm/yyyy" },
