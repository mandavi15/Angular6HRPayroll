            { all: "", checkboxSelection: true, sl: "4", item: "Mobile", serial: "Serial 004", model: "1234", brand: "Samsung", empId: "Emp 001", empName: "Abhishek", empDept: "Technical", empDesignation: "UI Developer", checkboxSelection: true, returnDate: "dd/mm/yyyy" },
            { all: "", checkboxSelection: true, sl: "5", item: "Data Cable", serial: "Serial 001", model: "1234", brand: "Philips", empId: "Emp 001", empName: "Abhishek", empDept: "Technical", empDesignation: "UI Developer", checkboxSelection: true, returnDate: "dd/mm/yyyy" }
        ];

        // let the grid know which columns and what data to use
        var gridOptions = {
            columnDefs: columnDefs,
            rowData: rowData,
            enableSorting: true,
            enableFilter: true
        };

        // lookup the container we want the Grid to use
        var eGridDiv = document.querySelector('#myGrid1');

        // create the grid passing in the div to use together with the columns & data we want to use
        new agGrid.Grid(eGridDiv, gridOptions);


    </script>
