    <script type="text/javascript" charset="utf-8">

        // specify the columns


        var columnDefs = [
            { headerName: "All", field: "all", width: 367 },
            { headerName: "Code", field: "code", width: 367 },
            { headerName: "Name", field: "name", width: 367 }
        ];

        // specify the data
        var rowData = [
            { all: "check", code: "201", name: "Noida" },
            { all: "check", code: "202", name: "Gurgaon" },
            { all: "check", code: "203", name: "Agra" },
            { all: "check", code: "204", name: "Faridabad" },
            { all: "check", code: "205", name: "Ghaziabad" }
        ];

        // let the grid know which columns and what data to use
        var gridOptions = {
            columnDefs: columnDefs,
            rowData: rowData,
            enableSorting: true,
            enableFilter: true
        };

        // lookup the container we want the Grid to use
        var eGridDiv = document.querySelector('#myGrid1');

        // create the grid passing in the div to use together with the columns & data we want to use
        new agGrid.Grid(eGridDiv, gridOptions);


    </script>
