        <div id="myGrid" style="height: 200px; width:100%;" class="ag-theme-balham"></div>

        <div class="buttonCon pull-left mt-3">
            <button type="submit" class="btn templateBg"><img src="~/Content/images/new-icon.png" alt="new">Create</button>
            <button type="button" id="btnEdit" class="btn templateBg"><img src="~/Content/images/edit-icon.png" alt="edit" />Edit</button>
            <button type="submit" class="btn templateBg" data-toggle="modal" data-target="#successPopup"><img src="~/Content/images/save-icon.png" alt="save" />Save</button>
            <button type="button" id="btnDelete" class="btn templateBg" data-toggle="modal" data-target="#deletePopup"><img src="~/Content/images/delete-icon.png" alt="delete" />Delete</button>
        </div>

        </div>
        <script type="text/javascript" charset="utf-8">

            // specify the columns


            var columnDefs = [
                { headerName: "Sr. No.", field: "sl", width: 150 },
                { headerName: "Name Of Document", field: "documentName", width: 320, editable: true },
                { headerName: "Description", field: "description", width: 320, editable: true },
                { headerName: "Country", field: "country", width: 320, editable: true }
            ];

            // specify the data
            var rowData = [
                { sl: "1", documentName: "Aadhar Card", description: "Aadhar Card", country: "India" },
                { sl: "2", documentName: "PAN Card", description: "PAN Card", country: "India"  },
                { sl: "3", documentName: "Voter ID Card", description: "Voter ID Card", country: "India"  },
                { sl: "4", documentName: "Ration Card", description: "Ration Card", country: "India" },
                { sl: "5", documentName: "Passport", description: "Passport", country: "India" }
            ];

            // let the grid know which columns and what data to use
            var gridOptions = {
                columnDefs: columnDefs,
                rowData: rowData,
                enableSorting: true,
                enableFilter: true
            };

            // lookup the container we want the Grid to use
            var eGridDiv = document.querySelector('#myGrid');

            // create the grid passing in the div to use together with the columns & data we want to use
            new agGrid.Grid(eGridDiv, gridOptions);


        </script>
                       
