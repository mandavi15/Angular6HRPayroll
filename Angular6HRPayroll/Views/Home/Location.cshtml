    <div class="buttonCon pull-left mt-3">
        <button type="button" class="btn templateBg" id="btnEdit" onclick="Edit()"><img src="~/Content/images/edit-icon.png" alt="edit" />Edit</button>

        <button type="button" class="btn templateBg" id="btnDelete" data-toggle="modal" data-target="#deletePopup"><img src="~/Content/images/delete-icon.png" alt="delete" />Delete</button>

    </div>
</div>
<div class="modal fade" id="addNew">
    <div class="modal-dialog modal-dialog-centered" id="addpopUp">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Location</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form name="myForm" onsubmit="return checkFormValidation();" class="hr-form col-12 col-md-12">
                    <div class="form-inline mb-2">
                        <label for="regionCode" class="col-4 col-md-4">Code:</label>
                        <input type="text" class="form-control col-8 col-md-8" onkeyup="RemoveClass()" id="txtDescription" name="region Code" placeholder="Code">
                    </div>
                    <div class="form-inline mb-2">
                        <label for="name" class="col-4 col-md-4">Name:</label>
                        <input type="text" class="form-control col-8 col-md-8" id="txtName" name="region name" onkeyup="RemoveClass()" placeholder="Name">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-submit" onclick="SaveDepartment()">SUBMIT</button>
            </div>
        </div>
    </div>
</div>

