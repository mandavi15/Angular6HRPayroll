        <button type="button" class="btn templateBg" onclick="javascript: document.location.href='../Master/HRareapage.aspx'"><img src="~/Content/images/home-icon.png" alt="home" />Home</button>
    </div>
    <h5>LOCATION</h5>
    <div class="row">
        <div class="col-7 col-md-7">
            <div class="buttonCon pull-left">
                <button type="submit" class="btn templateBg" data-toggle="modal" data-target="#addNew"><img src="~/Content/images/new-icon.png" alt="new">Add New</button>

            </div>
        </div>

        <div class="col-12 col-md-8 col-sm-9 pull-right col-lg-5 top-space">
