@{
    ViewBag.Title = "Location";
}

<html>
<head>
    <script src="~/Content/js/ag-grid-community.min.noStyle.js"></script>
    <link href="~/Content/css/ag-grid.css" rel="stylesheet" />
    <link href="~/Content/css/ag-theme-balham.css" rel="stylesheet" />
 
</head>
<body>
    <div class="container-fluid gridBody">

        <div class="buttonCon pull-right">

            <button type="button" class="btn templateBg" onclick="javascript: document.location.href='../Master/HRareapage.aspx'"><img src="~/Content/images/home-icon.png" alt="home" />Home</button>
        </div>
        <h5>ALL LOCATIONS</h5>
        <div class="row">
            <div class="col-7 col-md-7">
                <div class="buttonCon pull-left">
                    <button type="submit" class="btn templateBg" data-toggle="modal" data-target="#addNew"><img src="~/Content/images/new-icon.png" alt="new">Add New</button>

                </div>
            </div>

            <div class="col-12 col-md-8 col-sm-9 pull-right col-lg-5 top-space">
                <div class="show pull-left col-6 col-md-6 pl-5 pr-0 no-space">
                    <p>Show</p>
                    <form>
                        <div class="form-group">
                            <div class="styled-select slate">
                                <select class="form-control" id="country" name="country">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                    <option>7</option>
                                    <option>8</option>
                                </select>
                            </div>
                        </div>

                    </form>
                    <p>Entries</p>
                </div>
                <div class="input-group mb-2 col-6 col-md-6 pull-right pl-0">
                    <input class="form-control border-secondary" type="search" placeholder="search">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button">
                            <img src="~/Content/images/search-icon.png" alt="search" />
                        </button>
                    </div>
                </div>
            </div>

        </div>

        


        <div id="myGrid" style="height: 320px; width:100%;" class="ag-theme-balham"></div>

        <script type="text/javascript" charset="utf-8">

            // specify the columns

            
            var columnDefs = [
                { headerName: "All", field: "all", width: 367 },
                { headerName: "Code", field: "code", width: 367 },
                { headerName: "Name", field: "name", width: 367 }
            ];

            // specify the data
            var rowData = [
                { all: "check", code: "201", name: "Noida"},
                { all: "check", code: "202", name: "Gurgaon" },
                { all: "check", code: "203", name: "Agra" },
                { all: "check", code: "204", name: "Faridabad" },
                { all: "check", code: "205", name: "Ghaziabad" }
            ];

            // let the grid know which columns and what data to use
            var gridOptions = {
                columnDefs: columnDefs,
                rowData: rowData,
                enableSorting: true,
                enableFilter: true
            };

            // lookup the container we want the Grid to use
            var eGridDiv = document.querySelector('#myGrid');

            // create the grid passing in the div to use together with the columns & data we want to use
            new agGrid.Grid(eGridDiv, gridOptions);
            

        </script>

</body>
</html>
