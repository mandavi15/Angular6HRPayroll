<script type="text/javascript" charset="utf-8">

            // specify the columns


    var columnDefs = [
                { headerName: "All", checkboxSelection: true, field: "all", width: 120 },
                { headerName: "Sr. No.", field: "sl", width: 150 },
                { headerName: "Claim Type", field: "claimType", width: 410, editable: true },
                { headerName: "Description", field: "description", width: 420, editable: true }
            ];

            // specify the data
            var rowData = [
                { all: "", checkboxSelection: true, sl: "1", claimType: "Conveyance", description: "Conveyance description" },
                { all: "", checkboxSelection: true, sl: "2", claimType: "Medical", description: "Medical description"},
                { all: "", checkboxSelection: true, sl: "3", claimType: "Health Insurance", description: "Health Insurance description" },
                { all: "", checkboxSelection: true, sl: "4", claimType: "Life Insurance", description: "Life Insurance description" }
            ];

            // let the grid know which columns and what data to use
            var gridOptions = {
                columnDefs: columnDefs,
                rowData: rowData,
                enableSorting: true,
                enableFilter: true
            };

            // lookup the container we want the Grid to use
            var eGridDiv = document.querySelector('#myGrid');

            // create the grid passing in the div to use together with the columns & data we want to use
            new agGrid.Grid(eGridDiv, gridOptions);


</script>

