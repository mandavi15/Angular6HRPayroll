
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login2</title>
</head>
<body>
    <div>
        <div class="wrapper">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-8 mx-auto col-md-8 logBox">
                        <!--<img class="img-fluid" src="images/signin.jpg" alt="">-->
                        <div class="logo"><img class="img-fluid" src="images/logo.png" alt="" /></div>
                        <div class="mainCon">

                            <div class="leftCon col-6 col-md-6">
                                <h2>Welcome to Our Site</h2>
                                <h6>Lorem Ipsum is simply dummy text of the printing and typesetting industry</h6>
                            </div>
                            <div class="rightCon col-6 col-md-6">
                                <h6>Sign In</h6>
                                <div class="loginBody">
                                    <form name="myForm" onsubmit="return checkFormValidation();">
                                        <div class="form-group">
                                            <label for="usr">User ID</label>
                                            <input type="text" class="form-control" id="usr" name="username" placeholder="Enter Email ID">

                                        </div>
                                        <div class="form-group">
                                            <label for="pwd">Password</label>
                                            <input type="password" class="form-control" id="pwd" name="password" placeholder="Enter Password">
                                        </div>
                                        <button type="submit" class="btn templateBg">SIGN IN</button>
                                    </form>
                                </div>
                                <div class="loginfooter">
                                    <p><a href="reset-password.html">Forgot User ID or password?</a></p>
                                    <p><a class="createAcc" href="signup.html">Create an account</a></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
