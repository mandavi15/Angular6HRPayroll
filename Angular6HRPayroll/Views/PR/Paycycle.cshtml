  <body>
<div class="container-fluid gridBody" >
    
  
    <div class="center-block">
        <div class="panel-group">
            <div class="clearfix">
            </div>
            <div class="container p-0 clearfix">
                <div class="col-12 col-md-12 clearfix p-0 pull-left">
                    <div class="panel">
                        <div class="panel-head">
                            <div class="panel-title">
                                <h5 class="mb-2 pl-0" style="text-decoration: underline; text-transform: uppercase;">
                                    PAY CYCLE
                                </h5>
                            </div>
                        </div>
                    </div>
                    <div class="container clearfix p-0">
                        <div class="col-10 col-md-10 p-0 pull-left setup">
                            <div class="employeeSearch">
                                <div class="input-group mb-2">
                                    <input class="form-control border-secondary" type="text" onkeyup="filterEarning(this)" placeholder="search" />
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-secondary" type="button">
                                            <img src="~/Content/images/search-icon.png" alt="Search">
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="clearfix pay-head" style="border: 1px solid #2e6c71">
                        <div class="col-12 col-md-2 p-0 pull-left scrollbar scroll-style" style=" background-color: #e7eeef;">
                            <div class="payHead">
                                <ul class="nav navbar-nav" role="tablist" id="ListEarningType"></ul>
                            </div>
                        </div>
                        <div class="col-12 col-md-10 pull-left p-0">
                            <div class="tab-content col-md-12 col-12 p-0">
                                <div id="cycle" class="container tab-pane active">
                                    <div class="formBody clearfix">
                                        <form>
                                            <div class="pull-left col-12 col-md-6 pl-0">
                                                <div class="form-inline">
                                                    <label for="Employee Name" class="col-4 col-md-4 pl-0">
                                                        Period ID:
                                                    </label>
                                                    <label id="lblNameE" style="display:none"></label>
                                                    <div id="DivNameE" class="form-control col-7 col-md-7 p-0" style="border:0">
                                                        <input type="text" class="form-control" id="txtNameE" name="name" placeholder="Period ID">
                                                    </div>
                                                </div>
                                                <div class="form-inline">
                                                    <label for="type" class="col-4 col-md-4 pl-0">
                                                        Pay Cycle Frequency:
                                                    </label>
                                                    <label id="lblPayCycleE" style="display:none"></label>
                                                    <div id="DivPayCycleE" class="form-control col-7 col-md-7 p-0" style="border:0">
                                                        <input type="text" class="form-control ptb-4" id="ddlPayCycleE" name="name" placeholder="Pay Cycle Frequency">
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="pull-left col-12 col-md-6  pl-0">
                                                <div class="form-inline">
                                                    <label for="Currency" class="col-4 col-md-4 pl-0 pl-0">
                                                        Descripton:
                                                    </label>
                                                    <label id="lblDescE" style="display:none"></label>
                                                    <div id="DivDescE" class="form-control col-7 col-md-7 p-0" style="border:0">
                                                        <input type="text" class="form-control ptb-4" id="txtDescE" name="name" placeholder="Description">
                                                    </div>

                                                </div>

                                            </div>
                                        </form>
                                    </div>

                                    <div class="container p-0 top-border pt-4">
                                        <div class="buttonCon pull-left mb-2">
                                            <button type="button" id="btnGenPeriod" class="btn templateBg" data-toggle="modal" data-target="#addNew"><img src="~/Content/images/new-icon.png">Generate Period</button>
                                            <button type="button" id="btnRemove" onclick="RemoveSkills()" class="btn templateBg"><img src="~/Content/images/close-icon.png" />Remove</button>
                                            <button type="button" class="btn templateBg" id="btnSaveE"><img src="~/Content/images/save1%20copy.png" />Save</button>



                                            <button type="button" class="btn templateBg Cancelbtn" id="btnCancelE"><img src="~/Content/images/close-icon.png">Cancel</button>

                                        </div>


                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="scrollbar scroll-style">
                                        <table class="table greyBorder mb-4 top-border" id="ListPayCycleDetail">
                                            <thead>
                                                <tr class="lightGreen">
                                                    <th>
                                                        From Date
                                                    </th>
                                                    <th>
                                                        To Date
                                                    </th>
                                                    <th>
                                                        Status
                                                    </th>
                                                    <th>
                                                        Closed Time
                                                    </th>

                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="buttonCon col-12 col-md-4 pull-left mt-3 p-0">
                        <button type="button" class="btn col-4 col-md-3 templateBg" id="btnNewE"><img src="~/Content/images/new-icon.png" alt="add new">Add New</button>
                        <button type="button" class="btn col-3 col-md-3 templateBg" id="btnDeleteE" data-toggle="modal"
                                data-target="#deletePopup">
                            <img src="~/Content/images/delete-icon.png" alt="delete">Delete
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

